{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "worker",
  "main": "src/index.ts",
  "compatibility_date": "2025-09-21",
  // 机密请使用`wrangler secret put` 配置到 Cloudflare，而不是写在仓库里
  "vars": {
    "VISIBILITY_USE_CLOSURE": "true",
    "QUEUE_DRIVER": "inline",
    "DATA_DRIVER": "2"
  },
  "r2_buckets": [
    { "binding": "R2_EXPORTS", "bucket_name": "day-day-thing-up-15976" },
    { "binding": "R2_DATA", "bucket_name": "day-day-thing-up-15976" }
  ],
}
